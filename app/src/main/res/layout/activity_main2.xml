<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Main2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="share text "
                android:drawableRight="@drawable/ic_share_black_24dp"
                android:onClick="sharetext"/>

            <TextView
                android:id="@+id/activit_main2_textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gravitasone"
                android:paddingBottom="10dp"
                android:text="erge"
                android:textAlignment="center"
                android:textColor="@color/texttitle"
                android:textSize="22dp" />

            <TextView
                android:transitionName="trans"
                android:id="@+id/activit_main2_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/texttitle"
                android:textIsSelectable="true"
                android:textSize="18dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>